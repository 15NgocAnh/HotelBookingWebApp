@page
@model HotelBooking.Web.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Đăng Ký";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelBooking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
</head>
<body class="bg-light">
    <!-- Background Header -->
    <div class="hero-wrap" style="background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.3)), url('/images/bg_3.jpg') no-repeat center; background-size: cover; height: 250px;">
        <div class="overlay"></div>
        <div class="container d-flex justify-content-center align-items-center h-100">
            <h1 class="text-white text-center display-5 fw-bold">Đăng Ký Tài Khoản</h1>
        </div>
    </div>

    <!-- Form Đăng Ký -->
    <section class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-0 shadow-lg rounded-4 p-4">
                    <div class="card-body">
                        <h3 class="text-center text-primary mb-4 fw-bold">
                            <i class="fas fa-user-plus me-2"></i> Đăng Ký Tài Khoản
                        </h3>

                        <form method="post" enctype="multipart/form-data">
                            <!-- Họ & Tên -->
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="Input.first_name" class="form-label fw-semibold">Họ</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-user"></i></span>
                                        <input asp-for="Input.first_name" class="form-control p-3 rounded-3" placeholder="Nhập họ" />
                                    </div>
                                    <span asp-validation-for="Input.first_name" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Input.last_name" class="form-label fw-semibold">Tên</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-user"></i></span>
                                        <input asp-for="Input.last_name" class="form-control p-3 rounded-3" placeholder="Nhập tên" />
                                    </div>
                                    <span asp-validation-for="Input.last_name" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="mt-3">
                                <label asp-for="Input.email" class="form-label fw-semibold">Email</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-envelope"></i></span>
                                    <input asp-for="Input.email" type="email" class="form-control p-3 rounded-3" placeholder="Nhập email của bạn" />
                                </div>
                                <span asp-validation-for="Input.email" class="text-danger small"></span>
                            </div>

                            <!-- Mật khẩu -->
                            <div class="mt-3">
                                <label asp-for="Input.password" class="form-label fw-semibold">Mật Khẩu</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-lock"></i></span>
                                    <input asp-for="Input.password" type="password" class="form-control p-3 rounded-3" placeholder="Nhập mật khẩu" />
                                </div>
                                <span asp-validation-for="Input.password" class="text-danger small"></span>
                            </div>

                            <!-- Số điện thoại -->
                            <div class="mt-3">
                                <label asp-for="Input.phone_number" class="form-label fw-semibold">Số điện thoại</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-phone"></i></span>
                                    <input asp-for="Input.phone_number" class="form-control p-3 rounded-3" placeholder="Nhập số điện thoại" />
                                </div>
                                <span asp-validation-for="Input.phone_number" class="text-danger small"></span>
                            </div>

                            <!-- Giới tính & Ngày sinh -->
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <label asp-for="Input.gender" class="form-label fw-semibold">Giới tính</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-venus-mars"></i></span>
                                        <select asp-for="Input.gender" class="form-select px-3 py-2 rounded-3" style="height: 50px;">
                                            <option value="">Chọn giới tính</option>
                                            <option value="Male">Nam</option>
                                            <option value="Female">Nữ</option>
                                            <option value="Other">Khác</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="Input.gender" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Input.dob" class="form-label fw-semibold">Ngày sinh</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-calendar"></i></span>
                                        <input asp-for="Input.dob" type="date" class="form-control px-3 py-2 rounded-3" style="height: 50px;">
                                    </div>
                                    <span asp-validation-for="Input.dob" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Địa chỉ -->
                            <div class="mt-3">
                                <label asp-for="Input.address" class="form-label fw-semibold">Địa chỉ</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-map-marker-alt"></i></span>
                                    <input asp-for="Input.address" class="form-control p-3 rounded-3" placeholder="Nhập địa chỉ" />
                                </div>
                                <span asp-validation-for="Input.address" class="text-danger small"></span>
                            </div>

                            <!-- Nút Đăng Ký -->
                            <div class="d-grid mt-4">
                                <button type="submit" class="btn btn-primary fw-bold py-3 shadow-lg rounded-3">
                                    <i class="fas fa-user-plus me-2"></i> Đăng Ký
                                </button>
                            </div>

                            <!-- Đăng nhập -->
                            <div class="text-center mt-3">
                                <p class="mb-0">Đã có tài khoản? <a asp-page="./Login" class="text-primary fw-semibold">Đăng nhập ngay</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <text>
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi đăng ký!',
                        html: '@Html.Raw(Model.ErrorMessage.Replace("'", "\\'"))',
                        confirmButtonColor: '#d33',
                        confirmButtonText: 'OK'
                    });
                </text>
            }

            @if (Model.IsSuccess)
            {
                <text>
                    Swal.fire({
                        icon: 'success',
                        title: 'Đăng ký thành công!',
                        text: 'Vui lòng kiểm tra email để xác minh tài khoản.',
                        confirmButtonColor: '#3085d6',
                        confirmButtonText: 'OK'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = '/Account/Login';
                        }
                    });
                </text>
            }
        });
    </script>
</body>
</html>
