@page
@model HotelBooking.Web.Pages.Branches.DetailModel
@{
    ViewData["Title"] = "Chi tiết cơ sở";
    Layout = "_Layout";
}

<div class="container-fluid px-4 py-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <div class="row justify-content-between align-items-center">
                        <div class="col">
                            <h4 class="mb-0 text-primary">
                                <i class="fas fa-info-circle me-2"></i>Chi tiết cơ sở
                            </h4>
                        </div>
                        <div class="col-auto">
                            <a asp-page="Index" class="btn btn-outline-primary">
                                <i class="fas fa-arrow-left me-1"></i>Quay lại
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Tên cơ sở</label>
                                <p class="form-control-plaintext">@Model.Branch.Name</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Số điện thoại</label>
                                <p class="form-control-plaintext">@Model.Branch.PhoneNumber</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Email</label>
                                <p class="form-control-plaintext">@Model.Branch.Email</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Website</label>
                                <p class="form-control-plaintext">@Model.Branch.Website</p>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Địa chỉ</label>
                        <p class="form-control-plaintext">@Model.Branch.Address</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Ghi chú</label>
                        <p class="form-control-plaintext">@Model.Branch.Note</p>
                    </div>
                    <div class="text-end mt-4">
                        <a asp-page="Edit" asp-route-id="@Model.Branch.Id" class="btn btn-primary">
                            <i class="fas fa-edit me-1"></i>Chỉnh sửa
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 