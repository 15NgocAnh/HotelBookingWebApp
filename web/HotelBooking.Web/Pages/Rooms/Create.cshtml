@page
@model HotelBooking.Web.Pages.Rooms.CreateModel
@{
    ViewData["Title"] = "Thêm mới phòng";
    Layout = "_Layout";
}

<div class="container-fluid px-4 py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="row justify-content-between align-items-center">
                <div class="col">
                    <h4 class="mb-0 text-primary">
                        <i class="fas fa-door-open me-2"></i>Thêm mới phòng
                    </h4>
                </div>
                <div class="col-auto">
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Room.RoomNumber" class="control-label">Tên phòng <span class="text-danger">*</span></label>
                            <input asp-for="Room.RoomNumber" class="form-control" />
                            <span asp-validation-for="Room.RoomNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Room.RoomTypeId" class="control-label">Loại phòng <span class="text-danger">*</span></label>
                            <select asp-for="Room.RoomTypeId" class="form-control" asp-items="Model.RoomTypes"></select>
                            <span asp-validation-for="Room.RoomTypeId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Room.FloorId" class="control-label">Tầng <span class="text-danger">*</span></label>
                            <select asp-for="Room.FloorId" class="form-control" asp-items="Model.Floors"></select>
                            <span asp-validation-for="Room.FloorId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="form-check form-switch mt-4">
                                <input class="form-check-input" type="checkbox" asp-for="Room.IsActive" id="isActive">
                                <label class="form-check-label" for="isActive">Hoạt động</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Room.Description" class="control-label">Ghi chú</label>
                    <textarea asp-for="Room.Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Room.Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Lưu
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 
