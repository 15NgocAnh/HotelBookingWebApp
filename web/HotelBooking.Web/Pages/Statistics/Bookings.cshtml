@page
@model HotelBooking.Web.Pages.Statistics.BookingsModel
@{
    ViewData["Title"] = "Booking Statistics";
    Layout = "_Layout";
}

<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4><i class="fas fa-calendar-check me-2"></i> Booking Statistics</h4>
            <div class="subtitle">Analyze booking trends and patterns</div>
        </div>
        <div class="d-flex gap-2">
            <select id="timeRange" class="form-select">
                <option value="7">Last 7 days</option>
                <option value="30" selected>Last 30 days</option>
                <option value="90">Last 90 days</option>
                <option value="365">Last year</option>
            </select>
        </div>
    </div>

    <div class="row">
        <!-- Summary Cards -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Bookings</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalBookings">0</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Confirmation Rate</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="confirmationRate">0%</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-percentage fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Average Stay Duration</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="avgStayDuration">0 days</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Cancellation Rate</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="cancellationRate">0%</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-ban fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Booking Trend Chart -->
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Booking Trend</h6>
                </div>
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="bookingTrendChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Booking Status Distribution -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Booking Status Distribution</h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie">
                        <canvas id="bookingStatusChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Booking Analysis Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Booking Analysis</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="bookingAnalysisTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Total Bookings</th>
                            <th>Confirmed</th>
                            <th>Cancelled</th>
                            <th>Check-ins</th>
                            <th>Check-outs</th>
                            <th>Revenue</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Data will be populated dynamically -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        let bookingTrendChart;
        let bookingStatusChart;

        document.addEventListener('DOMContentLoaded', function() {
            loadData();
            
            document.getElementById('timeRange').addEventListener('change', function() {
                loadData();
            });
        });

        function loadData() {
            const days = document.getElementById('timeRange').value;
            fetch(`/api/statistics/bookings?days=${days}`)
                .then(response => response.json())
                .then(data => {
                    updateSummaryCards(data.summary);
                    updateBookingTrendChart(data.bookingTrend);
                    updateBookingStatusChart(data.bookingStatus);
                    updateBookingAnalysisTable(data.bookingAnalysis);
                })
                .catch(error => console.error('Error loading booking statistics:', error));
        }

        function updateSummaryCards(summary) {
            document.getElementById('totalBookings').textContent = summary.totalBookings;
            document.getElementById('confirmationRate').textContent = summary.confirmationRate + '%';
            document.getElementById('avgStayDuration').textContent = summary.averageStayDuration + ' days';
            document.getElementById('cancellationRate').textContent = summary.cancellationRate + '%';
        }

        function updateBookingTrendChart(data) {
            const ctx = document.getElementById('bookingTrendChart').getContext('2d');
            
            if (bookingTrendChart) {
                bookingTrendChart.destroy();
            }

            bookingTrendChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: data.labels,
                    datasets: [{
                        label: 'Daily Bookings',
                        data: data.values,
                        borderColor: '#4e73df',
                        backgroundColor: 'rgba(78, 115, 223, 0.05)',
                        borderWidth: 2,
                        pointRadius: 3,
                        pointBackgroundColor: '#4e73df',
                        pointBorderColor: '#fff',
                        pointHoverRadius: 5,
                        pointHoverBackgroundColor: '#4e73df',
                        pointHoverBorderColor: '#fff',
                        fill: true
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 1
                            }
                        }
                    }
                }
            });
        }

        function updateBookingStatusChart(data) {
            const ctx = document.getElementById('bookingStatusChart').getContext('2d');
            
            if (bookingStatusChart) {
                bookingStatusChart.destroy();
            }

            bookingStatusChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: data.labels,
                    datasets: [{
                        data: data.values,
                        backgroundColor: [
                            '#4e73df',  // Pending
                            '#1cc88a',  // Confirmed
                            '#36b9cc',  // Checked-in
                            '#f6c23e',  // Checked-out
                            '#e74a3b'   // Cancelled
                        ],
                        hoverBackgroundColor: [
                            '#2e59d9',
                            '#17a673',
                            '#2c9faf',
                            '#dda20a',
                            '#be2617'
                        ],
                        hoverBorderColor: "rgba(234, 236, 244, 1)",
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    },
                    cutout: '70%'
                }
            });
        }

        function updateBookingAnalysisTable(data) {
            const tbody = document.querySelector('#bookingAnalysisTable tbody');
            tbody.innerHTML = '';

            data.forEach(day => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${day.date}</td>
                    <td>${day.totalBookings}</td>
                    <td>${day.confirmed}</td>
                    <td>${day.cancelled}</td>
                    <td>${day.checkIns}</td>
                    <td>${day.checkOuts}</td>
                    <td>${formatCurrency(day.revenue)}</td>
                `;
                tbody.appendChild(row);
            });
        }

        function formatCurrency(value) {
            return new Intl.NumberFormat('en-US', {
                style: 'currency',
                currency: 'USD'
            }).format(value);
        }
    </script>
} 