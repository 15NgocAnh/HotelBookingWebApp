@page
@model HotelBooking.Web.Pages.Statistics.BookingsModel
@{
    ViewData["Title"] = "Booking Statistics";
    Layout = "_Layout";
}

<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4><i class="fas fa-calendar-check me-2"></i> Booking Statistics</h4>
            <div class="subtitle">Analyze booking trends and patterns</div>
        </div>
        <div class="d-flex gap-2">
            <select id="timeRange" class="form-select">
                <option value="7">Last 7 days</option>
                <option value="30" selected>Last 30 days</option>
                <option value="90">Last 90 days</option>
                <option value="365">Last year</option>
            </select>
        </div>
    </div>

    <div class="row">
        <!-- Summary Cards -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Bookings</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Statistics.TotalBookings</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Completed Bookings</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Statistics.CompletedBookings</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Pending Bookings</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Statistics.PendingBookings</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Cancelled Bookings</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Statistics.CancelledBookings</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-ban fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Booking Trend Chart -->
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Booking Trend</h6>
                </div>
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="bookingTrendChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Booking Status Distribution -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Booking Status Distribution</h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie">
                        <canvas id="bookingStatusChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Booking Analysis Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Booking Analysis</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="bookingAnalysisTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Total Bookings</th>
                            <th>Completed</th>
                            <th>Pending</th>
                            <th>Cancelled</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var daily in Model.Statistics.DailyBookings)
                        {
                            <tr>
                                <td>@daily.Date.ToString("yyyy-MM-dd")</td>
                                <td>@daily.Count</td>
                                <td>@daily.CompletedCount</td>
                                <td>@daily.PendingCount</td>
                                <td>@daily.CancelledCount</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        let bookingTrendChart;
        let bookingStatusChart;

        document.addEventListener('DOMContentLoaded', function() {
            initializeCharts();
            
            document.getElementById('timeRange').addEventListener('change', function() {
                loadData();
            });
        });

        function initializeCharts() {
            // Initialize Booking Trend Chart
            const trendCtx = document.getElementById('bookingTrendChart').getContext('2d');
            const dailyData = @Html.Raw(Json.Serialize(Model.Statistics.DailyBookings));
            
            bookingTrendChart = new Chart(trendCtx, {
                type: 'line',
                data: {
                    labels: dailyData.map(d => d.date),
                    datasets: [{
                        label: 'Daily Bookings',
                        data: dailyData.map(d => d.count),
                        borderColor: '#4e73df',
                        backgroundColor: 'rgba(78, 115, 223, 0.05)',
                        borderWidth: 2,
                        pointRadius: 3,
                        pointBackgroundColor: '#4e73df',
                        pointBorderColor: '#fff',
                        pointHoverRadius: 5,
                        pointHoverBackgroundColor: '#4e73df',
                        pointHoverBorderColor: '#fff',
                        fill: true
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 1
                            }
                        }
                    }
                }
            });

            // Initialize Booking Status Chart
            const statusCtx = document.getElementById('bookingStatusChart').getContext('2d');
            const statusData = {
                labels: ['Completed', 'Pending', 'Cancelled'],
                values: [
                    @Model.Statistics.CompletedBookings,
                    @Model.Statistics.PendingBookings,
                    @Model.Statistics.CancelledBookings
                ]
            };
            
            bookingStatusChart = new Chart(statusCtx, {
                type: 'doughnut',
                data: {
                    labels: statusData.labels,
                    datasets: [{
                        data: statusData.values,
                        backgroundColor: [
                            '#1cc88a',  // Completed
                            '#4e73df',  // Pending
                            '#e74a3b'   // Cancelled
                        ],
                        hoverBackgroundColor: [
                            '#17a673',
                            '#2e59d9',
                            '#be2617'
                        ],
                        hoverBorderColor: "rgba(234, 236, 244, 1)",
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    },
                    cutout: '70%'
                }
            });
        }

        function loadData() {
            const days = document.getElementById('timeRange').value;
            window.location.href = `?days=${days}`;
        }
    </script>
} 