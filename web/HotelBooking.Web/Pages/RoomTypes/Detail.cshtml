@page
@model HotelBooking.Web.Pages.RoomTypes.DetailModel
@{
    ViewData["Title"] = "Chi tiết loại phòng";
    Layout = "_Layout";
}

<div class="container-fluid px-4 py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="row justify-content-between align-items-center">
                <div class="col">
                    <h4 class="mb-0 text-primary">
                        <i class="fas fa-bed me-2"></i>Chi tiết loại phòng
                    </h4>
                </div>
                <div class="col-auto">
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (Model.RoomType != null)
            {
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.RoomType.Name)</dt>
                            <dd class="col-sm-8">@Model.RoomType.Name</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.RoomType.RoomTypeSymbol)</dt>
                            <dd class="col-sm-8">@Model.RoomType.RoomTypeSymbol</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.RoomType.NumberOfAdults)</dt>
                            <dd class="col-sm-8">@Model.RoomType.NumberOfAdults</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.RoomType.NumberOfChildrent)</dt>
                            <dd class="col-sm-8">@Model.RoomType.NumberOfChildrent</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.RoomType.Description)</dt>
                            <dd class="col-sm-8">@Model.RoomType.Description</dd>
                        </dl>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    Không tìm thấy thông tin loại phòng.
                </div>
            }
        </div>
    </div>
</div> 