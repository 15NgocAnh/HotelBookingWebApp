@page
@model HotelBooking.Web.Pages.RoomTypes.CreateModel
@{
    ViewData["Title"] = "Thêm mới loại phòng";
    Layout = "_Layout";
}

<div class="container-fluid px-4 py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="row justify-content-between align-items-center">
                <div class="col">
                    <h4 class="mb-0 text-primary">
                        <i class="fas fa-bed me-2"></i>Thêm mới loại phòng
                    </h4>
                </div>
                <div class="col-auto">
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="RoomType.Name" class="control-label">Loại phòng <span class="text-danger">*</span></label>
                            <input asp-for="RoomType.Name" class="form-control" />
                            <span asp-validation-for="RoomType.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="RoomType.RoomTypeSymbol" class="control-label">Ký hiệu phòng</label>
                            <input asp-for="RoomType.RoomTypeSymbol" class="form-control" />
                            <span asp-validation-for="RoomType.RoomTypeSymbol" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="RoomType.NumberOfAdults" class="control-label">Người lớn <span class="text-danger">*</span></label>
                            <input asp-for="RoomType.NumberOfAdults" class="form-control" />
                            <span asp-validation-for="RoomType.NumberOfAdults" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="RoomType.NumberOfChildrent" class="control-label">Trẻ em <span class="text-danger">*</span></label>
                            <input asp-for="RoomType.NumberOfChildrent" class="form-control" />
                            <span asp-validation-for="RoomType.NumberOfChildrent" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="RoomType.Description" class="control-label"></label>
                    <textarea asp-for="RoomType.Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="RoomType.Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Lưu
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 