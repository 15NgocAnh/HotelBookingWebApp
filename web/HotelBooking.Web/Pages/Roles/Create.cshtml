@page
@model HotelBooking.Web.Pages.Roles.CreateModel
@{
    ViewData["Title"] = "Create Role";
    Layout = "_Layout";
}

<div class="container-fluid px-4 py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="row justify-content-between align-items-center">
                <div class="col">
                    <h4 class="mb-0 text-primary">
                        <i class="fas fa-user-tag me-2"></i> Create New Role
                    </h4>
                </div>
                <div class="col-auto">
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @Model.ErrorMessage
                </div>
            }

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="RoleInput.Name" class="form-label">Role Name</label>
                    <input asp-for="RoleInput.Name" class="form-control" />
                    <span asp-validation-for="RoleInput.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RoleInput.Description" class="form-label">Description</label>
                    <textarea asp-for="RoleInput.Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="RoleInput.Description" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Create Role
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 