@page
@model HotelBooking.Web.Pages.Rooms.DetailModel
@{
    ViewData["Title"] = "Chi tiết phòng";
    Layout = "_Layout";
}

<div class="container-fluid px-4 py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="row justify-content-between align-items-center">
                <div class="col">
                    <h4 class="mb-0 text-primary">
                        <i class="fas fa-door-open me-2"></i>Chi tiết phòng
                    </h4>
                </div>
                <div class="col-auto">
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Room != null)
            {
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Room.RoomNumber)</dt>
                            <dd class="col-sm-8">@Model.Room.RoomNumber</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Room.RoomTypeName)</dt>
                            <dd class="col-sm-8">@Model.Room.RoomTypeName</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Room.NumberOfAdults)</dt>
                            <dd class="col-sm-8">@Model.Room.NumberOfAdults</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Room.NumberOfChildrent)</dt>
                            <dd class="col-sm-8">@Model.Room.NumberOfChildrent</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Room.IsActive)</dt>
                            <dd class="col-sm-8">
                                <span class="badge @(Model.Room.IsActive ? "bg-success" : "bg-danger")">
                                    @(Model.Room.IsActive ? "Hoạt động" : "Không hoạt động")
                                </span>
                            </dd>
                        </dl>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    Không tìm thấy thông tin phòng.
                </div>
            }
        </div>
    </div>
</div> 