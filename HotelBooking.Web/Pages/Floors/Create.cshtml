@page
@model HotelBooking.Web.Pages.Floors.CreateModel
@{
    ViewData["Title"] = "Thêm mới tầng";
    Layout = "_Layout";
}

<div class="container-fluid px-4 py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="row justify-content-between align-items-center">
                <div class="col">
                    <h4 class="mb-0 text-primary">
                        <i class="fas fa-building me-2"></i>Thêm mới tầng
                    </h4>
                </div>
                <div class="col-auto">
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Floor.Name" class="control-label">Tên tầng <span class="text-danger">*</span></label>
                            <input asp-for="Floor.Name" class="form-control" />
                            <span asp-validation-for="Floor.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Floor.OrderFloor" class="control-label">Thứ tự tầng <span class="text-danger">*</span></label>
                            <input asp-for="Floor.OrderFloor" class="form-control" type="number" />
                            <span asp-validation-for="Floor.OrderFloor" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Floor.RoomCount" class="control-label">Số lượng phòng <span class="text-danger">*</span></label>
                            <input asp-for="Floor.RoomCount" class="form-control" type="number" />
                            <span asp-validation-for="Floor.RoomCount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Floor.DefauldRoomRypeId" class="control-label">Loại phòng mặc định <span class="text-danger">*</span></label>
                            <select asp-for="Floor.DefauldRoomRypeId" class="form-control" asp-items="Model.RoomTypes">
                                <option value="">-- Chọn loại phòng --</option>
                            </select>
                            <span asp-validation-for="Floor.DefauldRoomRypeId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Floor.RoomSymbol" class="control-label">Ký hiệu phòng</label>
                            <input asp-for="Floor.RoomSymbol" class="form-control" />
                            <span asp-validation-for="Floor.RoomSymbol" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Floor.BranchId" class="control-label">Cơ sở <span class="text-danger">*</span></label>
                            <select asp-for="Floor.BranchId" class="form-control" asp-items="Model.Branches">
                                <option value="">-- Chọn cơ sở --</option>
                            </select>
                            <span asp-validation-for="Floor.BranchId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="form-check form-switch mt-4">
                                <input class="form-check-input" type="checkbox" asp-for="Floor.IsActive" id="isActive">
                                <label class="form-check-label" for="isActive">Hoạt động</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Floor.Description" class="control-label">Mô tả</label>
                    <textarea asp-for="Floor.Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Floor.Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Lưu
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 