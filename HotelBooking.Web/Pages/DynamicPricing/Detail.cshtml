@page
@model HotelBooking.Web.Pages.DynamicPricing.DetailModel
@{
    ViewData["Title"] = "Chi tiết quy tắc giá";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Tên quy tắc:</dt>
                        <dd class="col-sm-8">@Model.Rule.Name</dd>

                        <dt class="col-sm-4">Loại phòng:</dt>
                        <dd class="col-sm-8">@Model.Rule.RoomTypeName</dd>

                        <dt class="col-sm-4">Ngày bắt đầu:</dt>
                        <dd class="col-sm-8">@Model.Rule.StartDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Ngày kết thúc:</dt>
                        <dd class="col-sm-8">@Model.Rule.EndDate.ToString("dd/MM/yyyy")</dd>
                    </dl>
                </div>
            </div>

            <div class="form-group">
                <a asp-page="Edit" asp-route-id="@Model.Rule.Id" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Chỉnh sửa
                </a>
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div> 