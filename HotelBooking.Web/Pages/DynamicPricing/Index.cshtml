@page
@model HotelBooking.Web.Pages.DynamicPricing.IndexModel
@{
    ViewData["Title"] = "Quản lý giá theo thời điểm";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
        </div>
        <div class="col text-right">
            <a asp-page="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Thêm quy tắc giá
            </a>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên mức giá</th>
                            <th>Đơn giá ngày</th>
                            <th>Đơn giá đêm</th>
                            <th>Đơn giá giờ</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rule in Model.Rules)
                        {
                            <tr>
                                <td>@rule.Name</td>
                                <td>@rule.DatePrice</td>
                                <td>@rule.NightPrice</td>
                                <td>@rule.HourPrice</td>
                                <td>
                                    <a asp-page="Edit" asp-route-id="@rule.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-page="Detail" asp-route-id="@rule.Id" class="btn btn-sm btn-info">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal"
                                            onclick="setRuleIdToDelete(@rule.Id)" data-rulename="@rule.Name">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger" id="deleteModalLabel">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa quy tắc <strong id="ruleToDelete"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form asp-page-handler="Delete" method="post" id="deleteForm">
                    <input type="hidden" name="RuleId" id="ruleIdToDelete" value="" />
                    <button type="submit" class="btn btn-danger">Ok</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function setRuleIdToDelete(ruleId) {
            document.getElementById('ruleIdToDelete').value = ruleId;
        }

        document.addEventListener("DOMContentLoaded", function () {
            var deleteModal = document.getElementById("deleteModal");

            deleteModal.addEventListener("show.bs.modal", function (event) {
                var button = event.relatedTarget;
                var ruleName = button.getAttribute("data-rulename");

                document.getElementById("ruleToDelete").textContent = ruleName;
            });
        });
    </script>
} 