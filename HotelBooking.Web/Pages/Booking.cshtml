@page
@model BookingModel
@{
    ViewData["Title"] = "Book Room";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/booking.css" />
}

<div class="hero-wrap" style="background-image: url('images/bg_3.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text d-flex align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center d-flex align-items-end justify-content-center">
                <div class="text">
                    <p class="breadcrumbs mb-2"><span class="mr-2"><a asp-page="/Index">Home</a></span> <span>Book Room</span></p>
                    <h1 class="mb-4 bread">Book Your Room</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card shadow">
                    <div class="card-body">
                        <h3 class="card-title text-center mb-4">Room Booking Details</h3>
                        
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert alert-danger">@Model.ErrorMessage</div>
                        }

                        <form method="post" class="booking-form">
                            <input type="hidden" asp-for="Booking.RoomId" />
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="Booking.ArrivalDate" class="form-label">Check-in Date</label>
                                        <input asp-for="Booking.ArrivalDate" type="date" class="form-control" required />
                                        <span asp-validation-for="Booking.ArrivalDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="Booking.DepartureDate" class="form-label">Check-out Date</label>
                                        <input asp-for="Booking.DepartureDate" type="date" class="form-control" required />
                                        <span asp-validation-for="Booking.DepartureDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="Booking.EstArrivalTime" class="form-label">Expected Check-in Time</label>
                                        <input asp-for="Booking.EstArrivalTime" type="time" class="form-control" required />
                                        <span asp-validation-for="Booking.EstArrivalTime" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="Booking.EstDepartureTime" class="form-label">Expected Check-out Time</label>
                                        <input asp-for="Booking.EstDepartureTime" type="time" class="form-control" required />
                                        <span asp-validation-for="Booking.EstDepartureTime" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="Booking.NumAdults" class="form-label">Number of Adults</label>
                                        <input asp-for="Booking.NumAdults" type="number" class="form-control" min="1" required />
                                        <span asp-validation-for="Booking.NumAdults" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="Booking.NumChildren" class="form-label">Number of Children</label>
                                        <input asp-for="Booking.NumChildren" type="number" class="form-control" min="0" required />
                                        <span asp-validation-for="Booking.NumChildren" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Booking.SpecialReq" class="form-label">Special Requirements</label>
                                <textarea asp-for="Booking.SpecialReq" class="form-control" rows="3" placeholder="Any special requests or requirements?"></textarea>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-check me-2"></i>Confirm Booking
                                </button>
                                <a asp-page="/Rooms" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back to Rooms
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Set minimum date for arrival and departure to today
            var today = new Date().toISOString().split('T')[0];
            document.querySelector('input[asp-for="Booking.ArrivalDate"]').min = today;
            document.querySelector('input[asp-for="Booking.DepartureDate"]').min = today;

            // Update departure date minimum when arrival date changes
            document.querySelector('input[asp-for="Booking.ArrivalDate"]').addEventListener('change', function() {
                document.querySelector('input[asp-for="Booking.DepartureDate"]').min = this.value;
            });
        });
    </script>
} 