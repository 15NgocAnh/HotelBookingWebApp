@page
@model HotelBooking.Web.Pages.Branches.IndexModel
@{
    ViewData["Title"] = "Danh sách cơ sở";
    Layout = "_Layout";
}

<div class="container-fluid px-4 py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="row justify-content-between align-items-center">
                <div class="col">
                    <h4 class="mb-0 text-primary">
                        <i class="fas fa-building me-2"></i>Danh sách cơ sở
                    </h4>
                </div>
                <div class="col-auto">
                    <a asp-page="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Thêm mới
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Branches[0].Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Branches[0].PhoneNumber)</th>
                            <th>@Html.DisplayNameFor(model => model.Branches[0].Email)</th>
                            <th>@Html.DisplayNameFor(model => model.Branches[0].Address)</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Branches)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.Email</td>
                                <td>@item.Address</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-page="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal"
                                                onclick="setBranchIdToDelete(@item.Id)" data-branchname="@item.Name">
                                            Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.CurrentPage - 1)">
                                <i class="fas fa-angle-left"></i>
                            </a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-page="./Index" asp-route-pageIndex="@i">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.CurrentPage + 1)">
                                <i class="fas fa-angle-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }

            <div class="text-muted text-center mt-2">
                Hiển thị @Model.Branches.Count() trong tổng số @Model.TotalCount cơ sở
            </div>


            <!-- Delete Confirmation Modal -->
            <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title text-danger" id="deleteModalLabel">Confirm Deletion</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete branch <strong id="branchToDelete"></strong>?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <form asp-page-handler="Delete" method="post" id="deleteForm">
                                <input type="hidden" name="BranchId" id="branchIdToDelete" value="" />
                                <button type="submit" class="btn btn-danger">Ok</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div> 

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var deleteModal = document.getElementById("deleteModal");

            deleteModal.addEventListener("show.bs.modal", function (event) {
                var button = event.relatedTarget;
                var roomNo = button.getAttribute("data-branchname");

                document.getElementById("branchToDelete").textContent = roomNo;
            });
        });
        function setBranchIdToDelete(roomId) {
            document.getElementById('branchIdToDelete').value = roomId;
        }
    </script>
} 