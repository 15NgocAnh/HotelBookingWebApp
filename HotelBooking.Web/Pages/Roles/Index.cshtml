@page
@model HotelBooking.Web.Pages.Roles.IndexModel
@{
    ViewData["Title"] = "Danh sách nhóm quyền";
    Layout = "_Layout";
}

<div class="container-fluid px-4 py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="row justify-content-between align-items-center">
                <div class="col">
                    <h4 class="mb-0 text-primary">
                        <i class="fas fa-users-cog me-2"></i>Danh sách nhóm quyền
                    </h4>
                </div>
                <div class="col-auto">
                    <a asp-page="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Thêm mới
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Roles[0].Code)</th>
                            <th>@Html.DisplayNameFor(model => model.Roles[0].Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Roles[0].Description)</th>
                            <th>@Html.DisplayNameFor(model => model.Roles[0].IsActive)</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Roles)
                        {
                            <tr>
                                <td>@item.Code</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>
                                    <span class="badge @(item.IsActive ? "bg-success" : "bg-danger")">
                                        @(item.IsActive ? "Kích hoạt" : "Vô hiệu")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-page="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal"
                                                onclick="setRoleIdToDelete('@item.Id')" data-rolename="@item.Name">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Delete Confirmation Modal -->
            <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title text-danger" id="deleteModalLabel">Xác nhận xóa</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Bạn có chắc chắn muốn xóa nhóm quyền <strong id="roleToDelete"></strong>?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                            <form asp-page-handler="Delete" method="post" id="deleteForm">
                                <input type="hidden" name="roleId" id="roleIdToDelete" value="" />
                                <button type="submit" class="btn btn-danger">Xóa</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var deleteModal = document.getElementById("deleteModal");

            deleteModal.addEventListener("show.bs.modal", function (event) {
                var button = event.relatedTarget;
                var roleName = button.getAttribute("data-rolename");
                document.getElementById("roleToDelete").textContent = roleName;
            });
        });

        function setRoleIdToDelete(roleId) {
            document.getElementById('roleIdToDelete').value = roleId;
        }
    </script>
} 