@page
@model HotelBooking.Web.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Quên Mật Khẩu";
    Layout = "_Layout";
}

<section class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-6">
        <div class="card border-0 shadow-lg rounded-4">
            <!-- Header -->
            <div class="card-header bg-primary text-white text-center py-4 rounded-top">
                <h3 class="mb-0"><i class="fas fa-key me-2"></i> Quên Mật Khẩu</h3>
            </div>

            <!-- Body -->
            <div class="card-body px-5 py-4">
                <form method="post">
                    <!-- Email -->
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-semibold">
                            <i class="fas fa-envelope me-2"></i>Email
                        </label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fas fa-envelope"></i></span>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email của bạn" required />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <!-- Nút Gửi Yêu Cầu -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary fw-bold py-2 shadow-sm">
                            <i class="fas fa-paper-plane me-2"></i> Gửi Yêu Cầu
                        </button>
                    </div>

                    <!-- Quay lại Đăng Nhập -->
                    <div class="text-center mt-3">
                        <p>Quay lại <a asp-page="./Login" class="text-primary fw-semibold">Đăng Nhập</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
        // Nếu có lỗi, hiển thị popup lỗi
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <text>
                Swal.fire({
                    icon: 'error', // Biểu tượng lỗi
                    title: 'Error!',
                    html: '@Html.Raw(Model.ErrorMessage.Replace("'", "\\'"))', // Hiển thị lỗi từ API
                    confirmButtonColor: '#d33',
                    confirmButtonText: 'OK'
                });
            </text>
        }

        // Hiển thị popup thành công và chuyển hướng
        @if (Model.IsSuccess)
        {
            <text>
                Swal.fire({
                    icon: 'success', // Biểu tượng thành công
                    title: 'Success!',
                    text: 'Please check your email to reset your password.',
                    confirmButtonColor: '#3085d6',
                    confirmButtonText: 'OK'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '/Account/Login'; // Redirect về login
                    }
                });
            </text>
        }
    });
    </script>
}
