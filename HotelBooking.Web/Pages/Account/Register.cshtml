@page
@model HotelBooking.Web.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Đăng Ký";
    Layout = "_Layout";
}

<!-- Background Header -->
<div class="hero-wrap" style="background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.3)), url('/images/bg_3.jpg') no-repeat center; background-size: cover; height: 250px;">
    <div class="overlay"></div>
    <div class="container d-flex justify-content-center align-items-center h-100">
        <h1 class="text-white text-center display-5 fw-bold">Đăng Ký Tài Khoản</h1>
    </div>
</div>

<!-- Form Đăng Ký -->
<section class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Form rộng hơn -->
            <div class="card border-0 shadow-lg rounded-4 p-4">
                <div class="card-body">
                    <h3 class="text-center text-primary mb-4 fw-bold">
                        <i class="fas fa-user-plus me-2"></i> Đăng Ký Tài Khoản
                    </h3>

                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success text-center">@Model.SuccessMessage</div>
                    }
                    <div asp-validation-summary="All" class="alert alert-danger d-none"></div>

                    <form method="post" enctype="multipart/form-data">
                        <!-- Họ & Tên -->
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Input.FirstName" class="form-label fw-semibold">Họ</label>
                                <input asp-for="Input.FirstName" class="form-control p-3 rounded-3" placeholder="Nhập họ" />
                                <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Input.LastName" class="form-label fw-semibold">Tên</label>
                                <input asp-for="Input.LastName" class="form-control p-3 rounded-3" placeholder="Nhập tên" />
                                <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="mt-3">
                            <label asp-for="Input.Email" class="form-label fw-semibold">Email</label>
                            <input asp-for="Input.Email" type="email" class="form-control p-3 rounded-3" placeholder="Nhập email của bạn" />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <!-- Mật khẩu -->
                        <div class="mt-3">
                            <label asp-for="Input.Password" class="form-label fw-semibold">Mật Khẩu</label>
                            <input asp-for="Input.Password" type="password" class="form-control p-3 rounded-3" placeholder="Nhập mật khẩu" />
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <!-- Số điện thoại -->
                        <div class="mt-3">
                            <label asp-for="Input.PhoneNumber" class="form-label fw-semibold">Số điện thoại</label>
                            <input asp-for="Input.PhoneNumber" class="form-control p-3 rounded-3" placeholder="Nhập số điện thoại" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                        </div>

                        <!-- Giới tính & Ngày sinh -->
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label asp-for="Input.Gender" class="form-label fw-semibold">Giới tính</label>
                                <div class="input-group">
                                    <select asp-for="Input.Gender" class="form-select px-3 py-2 rounded-3" style="height: 50px;">
                                        <option value="">Chọn giới tính</option>
                                        <option value="Male">Nam</option>
                                        <option value="Female">Nữ</option>
                                        <option value="Other">Khác</option>
                                    </select>
                                </div>
                                <span asp-validation-for="Input.Gender" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Input.Dob" class="form-label fw-semibold">Ngày sinh</label>
                                <div class="input-group">
                                    <input asp-for="Input.Dob" type="date" class="form-control px-3 py-2 rounded-3" style="height: 50px;">
                                </div>
                                <span asp-validation-for="Input.Dob" class="text-danger small"></span>
                            </div>
                        </div>


                        <!-- Địa chỉ -->
                        <div class="mt-3">
                            <label asp-for="Input.Address" class="form-label fw-semibold">Địa chỉ</label>
                            <input asp-for="Input.Address" class="form-control p-3 rounded-3" placeholder="Nhập địa chỉ" />
                            <span asp-validation-for="Input.Address" class="text-danger small"></span>
                        </div>

                        <!-- Ảnh đại diện -->
                        <div class="text-center mt-3">
                            <label class="form-label fw-semibold">Ảnh đại diện</label>
                            <div>
                                <img id="avatarPreview" class="rounded-circle mb-2 shadow-sm border" src="~/images/default-avatar.png" alt="Ảnh đại diện" width="100" height="100">
                            </div>
                            <input type="file" id="avatarUpload" class="form-control p-3 rounded-3" accept="image/*" />
                        </div>

                        <!-- Nút Đăng Ký -->
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary fw-bold py-3 shadow-lg rounded-3">
                                <i class="fas fa-user-plus me-2"></i> Đăng Ký
                            </button>
                        </div>

                        <!-- Đăng nhập -->
                        <div class="text-center mt-3">
                            <p class="mb-0">Đã có tài khoản? <a asp-page="./Login" class="text-primary fw-semibold">Đăng nhập ngay</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Hiển thị ảnh preview khi chọn file ảnh
        document.getElementById('avatarUpload').addEventListener('change', function (event) {
            var reader = new FileReader();
            reader.onload = function () {
                document.getElementById('avatarPreview').src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        });

        // Hiển thị lỗi nếu có
        $(document).ready(function () {
            var errorBox = $(".alert-danger");
            if (errorBox.text().trim().length > 0) {
                errorBox.removeClass("d-none").fadeIn();
            }
        });
    </script>
}
