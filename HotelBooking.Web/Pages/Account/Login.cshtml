@page
@model LoginModel
@{
    ViewData["Title"] = "Đăng Nhập";
    Layout = "_Layout";
}

<!-- Background Header -->
<div class="hero-wrap" style="background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.3)), url('/images/bg_3.jpg') no-repeat center; background-size: cover; height: 250px;">
    <div class="overlay"></div>
    <div class="container d-flex justify-content-center align-items-center h-100">
        <h1 class="text-white text-center display-5 fw-bold">Đăng Nhập</h1>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 100vh; padding-top: 100px;">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-lg rounded-4 bg-white">
                <div class="card-header bg-primary text-white text-center py-4 rounded-top">
                    <h3 class="mb-0"><i class="fas fa-user-lock me-2"></i> Đăng Nhập</h3>
                </div>
                <div class="card-body px-5 py-5">

                    <form method="post">
                        <div asp-validation-summary="All" class="alert alert-danger d-none"></div>

                        <!-- Email -->
                        <div class="mb-4">
                            <label asp-for="Input.Email" class="form-label fw-semibold">
                                <i class="fas fa-envelope me-2"></i>Email
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Input.Email" class="form-control form-control-lg" placeholder="Nhập email của bạn" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <!-- Mật khẩu -->
                        <div class="mb-4">
                            <label asp-for="Input.Password" class="form-label fw-semibold">
                                <i class="fas fa-lock me-2"></i>Mật Khẩu
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-lock"></i></span>
                                <input asp-for="Input.Password" type="password" class="form-control form-control-lg" placeholder="Nhập mật khẩu" />
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <!-- Nút Đăng Nhập -->
                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-primary fw-bold py-3 shadow-sm btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i> Đăng Nhập
                            </button>
                        </div>

                        <!-- Đăng ký & Quên mật khẩu -->
                        <div class="text-center">
                            <p class="mb-3">
                                <a asp-page="./Register" class="text-primary text-decoration-none fw-semibold">
                                    <i class="fas fa-user-plus me-2"></i>Đăng ký tài khoản mới
                                </a>
                            </p>
                            <p>
                                <a asp-page="./ForgotPassword" class="text-danger text-decoration-none fw-semibold">
                                    <i class="fas fa-key me-2"></i>Quên mật khẩu?
                                </a>
                            </p>
                        </div>

                        <!-- Đăng nhập bằng MXH -->
                        <div class="mt-4">
                            <div class="text-center mb-3">
                                <span class="text-muted fw-semibold">Hoặc đăng nhập bằng</span>
                            </div>
                            <div class="d-flex justify-content-center gap-4">
                                <a href="#" class="btn btn-outline-primary rounded-circle btn-lg p-3">
                                    <i class="fab fa-facebook-f fa-lg"></i>
                                </a>
                                <a href="#" class="btn btn-outline-danger rounded-circle btn-lg p-3">
                                    <i class="fab fa-google fa-lg"></i>
                                </a>
                                <a href="#" class="btn btn-outline-info rounded-circle btn-lg p-3">
                                    <i class="fab fa-twitter fa-lg"></i>
                                </a>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
