@page
@model             BookingConfirmationModel
@{
    ViewData["Title"] = "Booking Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @Model.ErrorMessage
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h3 class="mb-0">Booking Confirmed!</h3>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                            <h4 class="mt-3">Thank you for your booking!</h4>
                            <p class="text-muted">Your booking has been successfully confirmed.</p>
                        </div>

                        <div class="booking-details">
                            <h5>Booking Details</h5>
                            <hr />
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Booking ID:</strong> @Model.Booking.BookingID</p>
                                    <p><strong>Room:</strong> @Model.Room.RoomNumber</p>
                                    <p><strong>Check-in Date:</strong> @Model.Booking.ArrivalDate.ToShortDateString()</p>
                                    <p><strong>Check-out Date:</strong> @Model.Booking.DepartureDate.ToShortDateString()</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Check-in Time:</strong> @Model.Booking.EstArrivalTime.ToString(@"hh\:mm")</p>
                                    <p><strong>Check-out Time:</strong> @Model.Booking.EstDepartureTime.ToString(@"hh\:mm")</p>
                                    <p><strong>Adults:</strong> @Model.Booking.NumAdults</p>
                                    <p><strong>Children:</strong> @Model.Booking.NumChildren</p>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4">
                            <h5>Price Details</h5>
                            <hr />
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Room Price per Night:</strong> @Model.Room.PricePerNight.ToString("C")</p>
                                    <p><strong>Total Days:</strong> @Model.TotalDays</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Total Price:</strong> <span class="text-primary fw-bold">@Model.TotalPrice.ToString("C")</span></p>
                                    <p><strong>Status:</strong> <span class="badge bg-@(Model.Booking.Status.ToString().ToLower() == "pending" ? "warning" : 
                                                                                    Model.Booking.Status.ToString().ToLower() == "confirmed" ? "success" : 
                                                                                    Model.Booking.Status.ToString().ToLower() == "cancelled" ? "danger" : 
                                                                                    "info")">@Model.Booking.Status</span></p>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Booking.SpecialReq))
                        {
                            <div class="mt-4">
                                <h5>Special Requirements</h5>
                                <hr />
                                <p>@Model.Booking.SpecialReq</p>
                            </div>
                        }

                        <div class="text-center mt-4">
                            <a href="/MyBookings" class="btn btn-primary me-2">
                                <i class="fas fa-list me-2"></i>View My Bookings
                            </a>
                            <a href="/" class="btn btn-outline-secondary">
                                <i class="fas fa-home me-2"></i>Return to Home
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div> 