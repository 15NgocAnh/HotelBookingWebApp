@page
@model HotelBooking.Web.Pages.Booking.SelectRoomModel
@{
    ViewData["Title"] = "Chọn Phòng";
    Layout = "_Layout";
}

<div class="room-selection-container">
    <div class="room-selection-header">
        <h2>CHỌN PHÒNG</h2>
        <span class="close-button">×</span>
    </div>

    <form method="post">
        <div class="room-selection-grid">
            @foreach (var floorGroup in Model.RoomsByFloor)
            {
                <div class="floor-row">
                    <div class="floor-label">@floorGroup.Key</div>
                    <div class="rooms">
                        @foreach (var room in floorGroup.Value)
                        {
                            <div class="room-item @GetRoomStatusClass(room.Status)" data-room-number="@room.RoomNumber">
                                @if (room.Status == "Available")
                                {
                                    <label class="selectable-room">
                                        <input type="checkbox" name="SelectedRooms" value="@room.Id"
                                               class="room-checkbox" />
                                        <span class="room-number">@room.RoomNumber</span>
                                    </label>
                                }
                                else
                                {
                                    <span class="room-number">@room.RoomNumber</span>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <div class="action-buttons">
            <button type="submit" class="btn-save">Lưu</button>
            <button type="button" class="btn-cancel">Hủy</button>
        </div>
    </form>
</div>

@functions {
    private string GetRoomStatusClass(string status)
    {
        return status switch
        {
            "Available" => "available",
            "Occupied" => "occupied customer",
            "Maintenance" => "unavailable",
            "Reserved" => "orange",
            "OutOfOrder" => "unavailable",
            _ => "available"
        };
    }
}

<style>
    .room-selection-container {
        font-family: Arial, sans-serif;
        max-width: 750px;
        margin: 0 auto;
        border: 1px solid #ddd;
        border-radius: 5px;
        overflow: hidden;
    }

    .room-selection-header {
        background-color: #337ab7;
        color: white;
        padding: 10px 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .room-selection-header h2 {
            margin: 0;
            font-size: 18px;
        }

    .close-button {
        font-size: 24px;
        cursor: pointer;
    }

    .room-selection-options {
        padding: 10px 15px;
        display: flex;
        justify-content: space-between;
        border-bottom: 1px solid #ddd;
    }

    .keep-invoice {
        display: flex;
        align-items: center;
    }

        .keep-invoice input[type="checkbox"] {
            margin-right: 5px;
        }

    .room-selection-grid {
        padding: 15px;
    }

    .floor-row {
        display: flex;
        margin-bottom: 10px;
        align-items: center;
    }

    .floor-label {
        width: 80px;
        padding: 5px;
        text-align: right;
        margin-right: 10px;
    }

    .rooms {
        display: flex;
        flex-grow: 1;
        gap: 5px;
    }

    .room-item {
        width: 60px;
        height: 40px;
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
        font-weight: bold;
        cursor: default;
    }

    .available {
        background-color: #28a745;
        cursor: pointer;
    }

    .selected {
        background-color: #1a8e3a; /* Darker green for selected rooms */
        cursor: pointer;
    }

    .occupied, .customer {
        background-color: #dc3545;
    }

    .unavailable {
        background-color: #6c757d;
    }

    .orange {
        background-color: #ffc107;
        color: black;
    }

    .selectable-room {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
    }

    .room-checkbox {
        position: absolute;
        opacity: 0;
    }

        .room-checkbox:checked + .room-number {
            text-decoration: underline;
        }

    .action-buttons {
        padding: 10px 15px;
        text-align: right;
        border-top: 1px solid #ddd;
    }

    .btn-save, .btn-cancel {
        padding: 5px 15px;
        margin-left: 10px;
        cursor: pointer;
    }

    .btn-save {
        background-color: #337ab7;
        color: white;
        border: none;
    }

    .btn-cancel {
        background-color: #f0f0f0;
        border: 1px solid #ddd;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Cancel button
        const cancelButton = document.querySelector('.btn-cancel');
        cancelButton.addEventListener('click', function () {
            window.history.back();
        });
    });
</script>